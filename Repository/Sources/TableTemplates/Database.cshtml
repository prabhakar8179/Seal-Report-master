@using Seal.Model;
@{
    MetaTable table = Model;

    //Parameters for this table
    table.Parameters.Add(new Parameter() { Name = "sql", Value = "", DisplayName = "SQL Select Statement", Description = "The SQL used to defined and load the DataTable." });

    table.DefinitionScript = @"@using System.Data
@{
    MetaTable metaTable = Model;
    TaskDatabaseHelper helper = new TaskDatabaseHelper();
    metaTable.NoSQLTable = helper.LoadDataTable(metaTable.Source.Connection, metaTable.GetValue(""sql""));
}";

    table.LoadScript = @"";
}
